{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha":true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "no-console": ["error", {"allow": ["error", "info", "warn"]}],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-only-tests/no-only-tests": "error"
    },
    "plugins": [
      "no-only-tests"
    ]
}
